<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
      <h4>7日間分の投稿数</h4>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>6日前</th>
            <th>5日前</th>
            <th>4日前</th>
            <th>3日前</th>
            <th>2日前</th>
            <th>1日前</th>
            <th>今日</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><p><%= @seven_days_ago %></p></td>
            <td><p><%= @six_days_ago %></p></td>
            <td><p><%= @five_days_ago %></p></td>
            <td><p><%= @four_days_ago %></p></td>
            <td><p><%= @three_days_ago %></p></td>
            <td><p><%= @yesterday %></p></td>
            <td><p><%= @today %></p></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>